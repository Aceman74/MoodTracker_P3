<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_sage"
    tools:context=".ui.MainActivity">

    <ImageButton
        android:id="@+id/activity_main_smiley_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:contentDescription="@string/Actual_mood"
        android:focusableInTouchMode="false"
        android:src="@drawable/smiley_happy" />

    <ImageButton
        android:id="@+id/activity_main_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:background="@android:color/transparent"
        android:clickable="false"
        android:contentDescription="Share your mood with your friends!"
        android:padding="10sp"
        android:src="@android:drawable/ic_menu_share"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:focusableInTouchMode="false">

        <ImageButton
            android:id="@+id/activity_main_note_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_gravity="start"
            android:background="@android:color/transparent"
            android:contentDescription="@string/Add_Note"
            android:padding="20dp"
            android:src="@drawable/ic_note_add_black" />

        <ImageButton
            android:id="@+id/activity_main_history_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:background="@android:color/transparent"
            android:contentDescription="@string/mood_history"
            android:padding="20dp"
            android:src="@drawable/ic_history_black" />

    </RelativeLayout>

</FrameLayout>